<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_label"
            style="@style/ListItemTitleTheme"
            android:text="@string/title_label" />

        <TextView
            android:id="@+id/book_title_text_view"
            style="@style/ListItemTheme"
            android:text="Book_Title"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/author_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/author_label"
            style="@style/ListItemTitleTheme"
            android:text="@string/author_label"/>

        <TextView
            android:id="@+id/book_author_text_view"
            style="@style/ListItemTheme"
            android:text="Book_Author"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/publisher_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/publisher_label"
            style="@style/ListItemTitleTheme"
            android:text="@string/publisher_label"/>

        <TextView
            android:id="@+id/book_publisher_text_view"
            style="@style/ListItemTheme"
            android:text="Book_Publisher"/>

    </LinearLayout>


</LinearLayout>